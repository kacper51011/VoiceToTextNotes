<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Views.VoiceDetectorView"
             Title="VoiceDetectorView">
    <FlexLayout Direction="Column" JustifyContent="SpaceAround" >
        <Label 
            Text="Click Start To Start Recording!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Image Source="{Binding ImageSource}"  />
        <FlexLayout Direction="Row" JustifyContent="SpaceAround">
            <Button Text="START" BackgroundColor="{StaticResource startButtonBackground}" Style="{StaticResource VoiceDetectorButton}" />
            <Button Text="STOP" BackgroundColor="{StaticResource stopButtonBackground}" Style="{StaticResource VoiceDetectorButton}" />
            <Button Text="EDIT" BackgroundColor="{StaticResource editButtonBackground}" Style="{StaticResource VoiceDetectorButton}" />
        </FlexLayout>
    </FlexLayout>
</ContentPage>