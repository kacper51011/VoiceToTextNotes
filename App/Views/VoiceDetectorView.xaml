<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Views.VoiceDetectorView"
             Title="VoiceDetectorView">
    <Grid RowDefinitions="150, 1*, 100" RowSpacing="50" >
        <Label Grid.Row="0"
            Text="{Binding DisplayedInformation}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <!--<Image Source="greenmicrophone.svg" IsVisible="{Binding IsStarted}"   />-->
        <Image Grid.Row="1" Source="{Binding MicrophoneImageSource}"  HeightRequest="300"/>
        <!--<Button Grid.Row="1" Text="test" Command="{Binding StartDetecting}"/>-->

        <Grid Grid.Row="2" ColumnDefinitions="1*, 1*, 1*" ColumnSpacing="5" Margin="10,0,10,40">
            <Button Grid.Column="0" Text="START" Command="{Binding StartDetecting}" BackgroundColor="{StaticResource startButtonBackground}" Style="{StaticResource VoiceDetectorButton}" />
            <Button Grid.Column="1" Text="STOP" BackgroundColor="{StaticResource stopButtonBackground}" Style="{StaticResource VoiceDetectorButton}" />
            <Button Grid.Column="2" Text="EDIT" BackgroundColor="{StaticResource editButtonBackground}" Style="{StaticResource VoiceDetectorButton}" />
        </Grid>
    </Grid>
</ContentPage>