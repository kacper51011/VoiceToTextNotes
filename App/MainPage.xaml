<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button  Text="Create Voice Note" Style="{StaticResource DefaultButton}" Margin="0, 0, 0, 50" Clicked="{Binding NavigateToVoiceDetector}"  />
            <Button Text="Notes" Style="{StaticResource DefaultButton}" Clicked="{Binding NavigateToNotes}" />
            <Button Text="Guide" Style="{StaticResource DefaultButton}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
