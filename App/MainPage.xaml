<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.MainPage"
             Style="{StaticResource Key=PageBackground}"
             Shell.NavBarIsVisible="False"
             >

    <ScrollView VerticalOptions="Center">
        <Grid RowDefinitions="100,100,100,100, 100" ColumnDefinitions="*" RowSpacing="2" Padding="0, 30, 0, 30" >
            <Label Grid.Row="0" Text="Voice To Notes" Style="{StaticResource MainLabel}" />
            <Button Grid.Row="1"  Text="Create Voice Note" Style="{StaticResource MainPageButton}" Command="{Binding NavigateToVoiceDetector}"  />
            <Button Grid.Row="2" Text="Notes" Style="{StaticResource MainPageButton}" Command="{Binding NavigateToNotes}" />
            <Button Grid.Row="3" Text="Guide" Style="{StaticResource MainPageButton}" Command="{Binding NavigateToVoiceDetector}" />
            <Button Grid.Row="4" Text="Exit App" Style="{StaticResource MainPageButton}" Command="{Binding ExitApp}" />
        </Grid>
    </ScrollView>

</ContentPage>
